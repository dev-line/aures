<% layout ('Dash') %>
<title>Edit Draft</title>
<div class="main-content-container container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header row no-gutters py-4">
        <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
            <span class="text-uppercase page-subtitle">Draft</span>
            <h3 class="page-title">Edit Draft</h3>
        </div>
    </div>
    <!-- End Page Header -->
    <div class="row">
        <div class="col-lg-9 col-md-12">
            <!-- Add New Post Form -->
            <div class="card card-small mb-3">
                <div class="card-body">
                    <div class="container">
                        <input id="id" type="text" value="<%= Post._id %>" disabled hidden>
                        <div class="add-new-post">
                            <input class="form-control form-control-lg mb-3" type="text" id="Title"
                                value="<%= Post.Title %>" placeholder="Your Post Title">
                            <button type="button" class="btn btn-dark btn-sm" data-toggle="modal"
                                data-target="#UploadImg">Choose
                                Thumbnail</button>
                            <input id="Thumbnail" type="text" disabled hidden value="<%= Post.Thumbnail %>">
                            <% include Upload %>
                            <div id="editor-container" class="add-new-post__editor mb-1" style="margin-top: 20px;">
                                <textarea id="Blog-Editor"><%- Post.Content %></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- / Add New Post Form -->
        </div>
        <div class="col-lg-3 col-md-12">
            <!-- Post Overview -->
            <div class='card card-small mb-3'>
                <div class="card-header border-bottom">
                    <h6 class="m-0">Actions</h6>
                </div>
                <div class='card-body p-0'>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item p-3">
                            <span class="d-flex mb-2">
                                <i class="material-icons mr-1">visibility</i>
                                <strong class="mr-1">Visibility:</strong>
                                <strong class="text-success">Public</strong>
                            </span>
                            <span class="d-flex mb-2">
                                <i class="material-icons mr-1">calendar_today</i>
                                <strong class="mr-1">Schedule:</strong> Now
                            </span>
                            <span class="d-flex">
                                <i class="material-icons mr-1">score</i>
                                <strong class="mr-1">Readability:</strong>
                                <strong class="text-warning">Ok</strong>
                            </span>
                        </li>
                        <li class="btn-group btn-group-sm" role="group">
                            <a href="/admin/dashboard/draft" class="btn btn-outline-accent ml-auto" id="Cancel">
                                <i class="material-icons">cancel</i> Cancel</a>
                            <button class="btn btn-accent ml-auto" id="Edit-Draft">
                                <i class="material-icons">edit</i> Edit</button>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- / Post Overview -->
            <!-- Post Overview -->
            <div class='card card-small mb-3'>
                <div class="card-header border-bottom">
                    <h6 class="m-0">Categories</h6>
                </div>
                <div class='card-body p-0'>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-3 pb-2" id="Categories">
                            <%if(Categ){%>
                            <%for(i=0; i<Categ.length; i++){%>
                            <div class="custom-control custom-checkbox mb-1">
                                <input type="checkbox" class="custom-control-input" name="Category" id="category<%=i%>"
                                    value="<%=Categ[i].Name%>">
                                <label class="custom-control-label" for="category<%=i%>"><%=Categ[i].Name%></label>
                            </div>
                            <%}%>
                                <%}%>
                        </li>
                        <li class="list-group-item d-flex px-3">
                            <div class="input-group">
                                <input type="text" class="form-control" id="Categ" placeholder="New category"
                                    aria-label="Add new category" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-white px-2" id="Add_Categ" type="button">
                                        <i class="material-icons">add</i>
                                    </button>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- / Post Overview -->
        </div>
    </div>
</div>