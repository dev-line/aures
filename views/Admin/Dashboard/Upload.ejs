<!-- Modal -->
<div class="modal fade" id="UploadImg" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Choose Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                        aria-controls="home" aria-selected="true">Upload</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="MyImgTab" data-toggle="tab" href="#MyImgs" role="tab" aria-controls="MyImgs"
                        aria-selected="false">My Images</a>
                </li>
            </ul>
            <div class="modal-body">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <input name="ImgUpload" type="file" id="myFile">
                    <p style="color:red">Upload only image file (PNG, JPEG, BMB)</p>
                    <div class="form-group Upload-form">
                        <label for=""></label>
                        <button type="submit" class="btn btn-accent" id="UpImg">Upload</button>
                    </div>
                </div>
                <div class="tab-pane fade" id="MyImgs" role="tabpanel" aria-labelledby="MyImgTab">
                    <label>Choose image to upload:</label>
                    <div class="cc-selector">
                        <% for(i=0; i<Imgs.length; i++){%>
                        <input id="visa" type="radio" name="Pic" value="<%=Imgs[i].Url%>" />
                        <label class="drinkcard-cc visa" for="visa"
                            style="background-image: url(<%=Imgs[i].Url%>);"></label>
                        <%}%>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>